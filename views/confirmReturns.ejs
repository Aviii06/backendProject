    <h2>Requests</h2>
    <table class="table table-success table-bordered border-dark table-hover">
        <tr>
            <th>S.N</th>
            <th>Book id</th>
            <th>Book Name</th>
            <th>current capacity</th>
            <th>Issued by</th>
            <th>Respond</th>
        </tr>
        
        <%
        if(result.length!=0){
        var i=1;
        result.forEach(function(data){
        %>
        <tr>
            <td><%=i; %></td>
            <td><%=data.book_id %></td>
            <td><%=data.book_name %></td>
            <td><%=data.capacity %></td>
            <td><%=data.uname %></td>
            <td><form method="post" action="returned?bookId=<%=data.book_id%>&userName=<%=data.uname %>" class="inline">
                <input type="hidden" name=>
                <button type="submit" name="submit_param" value="submit_value" class="btn btn-success">
                  Accept
                </button>
              </form></td>
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
